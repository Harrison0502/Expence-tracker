<div class="mt-5 container col-6 container">
  <div class="row">
    <h3 class="text-center mb-5">請修改你的支出</h3>
    <p class="text-danger">*必填欄位</p>
    <form action="/records/{{record._id}}?_method=PUT" method="POST">

      <div class="mb-3">
        <label for="name" class="form-label red-spot">名稱</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="請修改支出名稱" 
          value="{{record.name}}">
      </div>

      <div class="mb-3">
        <label for="date" class="form-label red-spot">日期</label>
        <input type="date" class="form-control" id="date" class="date" name="date" value="{{record.date}}">
      </div>

      <div class="mb-3">
        <label for="category" class="col-md-4 col-form-label">
          類別 <i class="fa-solid fa-filter"></i>
        </label>
        <select id="category" class="form-control" placeholder="請選擇" name="category">
      
          {{#each categories}}
          <option value="{{this._id}}" {{#if (eq this._id record.categoryId._id)}}selected{{/if}}>{{this.name}}</option>
          {{/each}} 
        </select>
      </div>

      <div class="mb-3">
        <label for="amount" class="form-label red-spot">金額</label>
        <input type="number" class="form-control" id="amount" name="amount" min="1" max="100000000"
          placeholder="１元以上、１億元以下的支出金額" value="{{record.amount}}">
      </div>


      <div class="mt-5 d-grid gap-2 col-4 mx-auto">
        <button class="btn btn-primary" type="submit">修改支出</button>
      </div>
    </form>
  </div>
</div>