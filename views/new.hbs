<div class="mt-5 container col-6 container">
  <div class="row">
    <h3 class="text-center mb-5">請輸入你的支出</h3>
    <p class="text-danger">*必填欄位</p>
    <form action="/records" method="POST">

      <div class="mb-3">
        <label for="name" class="form-label red-spot">名稱</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="請輸入支出名稱" 
          value="{{name}}">
      </div>

      <div class="mb-3">
        <label for="date" class="form-label red-spot">日期</label>
        <input type="date" class="form-control" id="date" class="date" name="date" value="{{date}}">
      </div>

      <div class="mb-3">
        <label for="category" class="col-md-4 col-form-label">
          類別 <i class="fa-solid fa-filter"></i>
        </label>
        <select id="category" class="form-control" placeholder="請選擇" name="category">
          <option value="">請選擇</option>
          {{#each category}}
          <option value="{{this._id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>

      <div class="mb-3">
        <label for="amount" class="form-label red-spot">金額</label>
        <input type="number" class="form-control" id="amount" name="amount" min="1" max="100000000"
          placeholder="１元以上、１億元以下的支出金額" value="{{amount}}">
      </div>


      <div class="mt-5 d-grid gap-2 col-4 mx-auto">
        <button class="btn btn-primary" type="submit">新增支出</button>
      </div>
    </form>
  </div>
</div>